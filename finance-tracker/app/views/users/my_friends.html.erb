<h1 class="text-center mt-5 mb-5">My Friends</h1>

<h3>Search Friends</h3>
<%= form_tag search_friend_path, remote: true, method: :get do %>
<div class="form-group row mb-4">
    <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: "Friend name", autofocus: true, class: "form-control form-control-lg"%>
    </div>
    <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do  %>
        <%= fa_icon 'search 2x' %>
        <% end %>
    </div>
</div>
<% end %>

<div id="friend-results">

</div>


<div class="row">
    <div class="col-9">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">First</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @friends.each do |friend| %>
                <tr>
                    <th scope="row"><%= friend.email %></th>
                    <td><%= friend.first_name %></td>
                    <td><%= friend.last_name %></td>
                    <td> 
                    <%= link_to "View Profile", user_path(friend),
                              class: "btn btn-sm btn-success mr-2" %><%= link_to "Stop Following", friendship_path(friend), method: :post, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-warning" %>
                    
                    </td>
                    

                </tr>
                <% end %>


            </tbody>
        </table>
    </div>
</div>